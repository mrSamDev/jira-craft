{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@type/*": ["types/*"],
      "@programs/*": ["programs/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
